{
  "name": "node-api-skeleton",
  "version": "2.0.0",
  "description": "Production-ready Node.js API skeleton with Hexagonal Architecture, Fastify, TypeScript, DDD, Vitest, Docker, Prometheus, and k6",
  "private": true,
  "scripts": {
    "start": "node ./dist/main.js",
    "dev": "nodemon --exec \"node -r @swc-node/register\" src/main.ts",
    "build": "swc src -d dist --copy-files --strip-leading-paths",
    "build:tsc": "tsc",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\" \"test/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\" \"test/**/*.{ts,tsx,js,jsx,json,md}\"",
    "test": "cross-env PORT=5054 vitest run",
    "test:watch": "cross-env PORT=5054 vitest",
    "test:ui": "cross-env PORT=5054 vitest --ui",
    "test:coverage": "cross-env PORT=5054 vitest run --coverage",
    "test:performance:v1": "k6 run test/performance/greetings-v1.k6.js",
    "test:performance:v2": "k6 run test/performance/greetings-v2.k6.js",
    "test:performance:load": "k6 run test/performance/load-test.k6.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/swagger": "^9.6.1",
    "@fastify/swagger-ui": "^5.2.3",
    "dotenv": "^16.0.3",
    "fastify": "^5.6.2",
    "prom-client": "^15.1.3",
    "winston": "^3.19.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@swc-node/register": "^1.11.1",
    "@swc/cli": "^0.7.9",
    "@swc/core": "^1.15.7",
    "@types/node": "^25.0.3",
    "@types/supertest": "^2.0.16",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "cross-env": "^7.0.3",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.5.0",
    "husky": "^8.0.3",
    "lint-staged": "^16.2.7",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.4.2",
    "supertest": "^7.1.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.19.1",
    "vitest": "^4.0.16"
  },
  "keywords": [
    "Nodejs",
    "Fastify",
    "TypeScript",
    "Hexagonal Architecture",
    "Clean Architecture",
    "DDD",
    "SWC",
    "Vitest",
    "Zod",
    "Winston",
    "Prometheus",
    "k6",
    "ESLint",
    "Prettier",
    "Husky",
    "Docker"
  ]
}
