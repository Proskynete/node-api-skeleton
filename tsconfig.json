{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "types": [
      "node",
      "jest"
    ],
    "strict": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}