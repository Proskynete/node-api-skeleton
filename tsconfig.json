{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "types": [
      "node",
      "vitest/globals"
    ],
    "strict": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@core/*": ["@core/*"],
      "@application/*": ["@application/*"],
      "@infrastructure/*": ["@infrastructure/*"],
      "@shared/*": ["@shared/*"]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}